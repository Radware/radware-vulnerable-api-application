{
  "name": "DavidBrown - Login and View Past Orders",
  "description": "DavidBrown logs in, views his profile, and then directly views his order history without creating a new order. This teaches the system that viewing past orders is a standalone, valid action.",
  "headers": {
    "Accept": "application/json"
  },
  "staticVars": {
    "baseUrl": "http://localhost:8060",
    "davidUsername": "DavidBrown",
    "davidPassword": "DavidPass4$",
    "davidUserId": "00000005-0000-0000-0000-000000000005"
  },
  "steps": [
    {
      "id": "step_david_login",
      "name": "Login DavidBrown",
      "type": "request",
      "method": "POST",
      "url": "{{baseUrl}}/api/auth/login?username={{davidUsername}}&password={{davidPassword}}",
      "extract": {
        "token": "body.access_token"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_david_get_profile",
      "name": "David: Get Own Profile (Post-Login)",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{davidUserId}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_david_view_order_history",
      "name": "David: View Order History",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{davidUserId}}/orders",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "continue"
    }
  ],
  "visualLayout": {
    "step_david_login": { "x": 50, "y": 50 },
    "step_david_get_profile": { "x": 250, "y": 50 },
    "step_david_view_order_history": { "x": 450, "y": 50 }
  }
}