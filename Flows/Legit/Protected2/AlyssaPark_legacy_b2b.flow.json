{
  "name": "AlyssaPark - Legacy + B2B Discovery",
  "description": "Protected user AlyssaPark logs in, uses legacy address search and legacy order status, then performs a B2B partner lookup.",
  "headers": {
    "Accept": "application/json",
    "x-remote-ip": "{{RANDOM_IP}}"
  },
  "staticVars": {
    "baseUrl": "http://localhost:8060",
    "userUsername": "AlyssaPark",
    "userPassword": "AlyssaPass26!",
    "userId": "00000027-0000-0000-0000-000000000027",
    "legacyOrderId": "2cb6a798-a996-5d7e-b3a4-c6735b0cbaed",
    "legacyToken": "legacy-demo",
    "addressSearchQuery": "Demo%20City",
    "partnerCode": "alyss134ark"
  },
  "steps": [
    {
      "id": "step_alyssapark_login",
      "name": "Login AlyssaPark",
      "type": "request",
      "method": "POST",
      "url": "{{baseUrl}}/api/auth/login?username={{userUsername}}&password={{userPassword}}",
      "extract": {
        "token": "body.access_token"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_alyssapark_legacy_address_search",
      "name": "AlyssaPark: Legacy Address Search",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/addresses/search-legacy?q={{addressSearchQuery}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_alyssapark_legacy_order_status",
      "name": "AlyssaPark: Legacy Order Status",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/orders/{{legacyOrderId}}/status-legacy?legacy_token={{legacyToken}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_alyssapark_b2b_partner_lookup",
      "name": "AlyssaPark: B2B Partner Lookup",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/b2b/partner-lookup?q={{partnerCode}}",
      "onFailure": "continue"
    }
  ],
  "visualLayout": {
    "step_alyssapark_login": {
      "x": 50,
      "y": 50
    },
    "step_alyssapark_legacy_address_search": {
      "x": 250,
      "y": 50
    },
    "step_alyssapark_legacy_order_status": {
      "x": 450,
      "y": 50
    },
    "step_alyssapark_b2b_partner_lookup": {
      "x": 650,
      "y": 50
    }
  }
}
