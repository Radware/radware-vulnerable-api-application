{
  "name": "AliceSmith - Legacy + B2B Discovery",
  "description": "Protected user AliceSmith logs in, uses legacy address search and legacy order status, then performs a B2B partner lookup.",
  "headers": {
    "Accept": "application/json"
  },
  "staticVars": {
    "baseUrl": "https://bla-bypass.ase-team.com",
    "userUsername": "AliceSmith",
    "userPassword": "AlicePass1!",
    "userId": "00000002-0000-0000-0000-000000000002",
    "legacyOrderId": "1b703d74-0a6e-567a-a461-b93271b5e47e",
    "legacyToken": "legacy-demo",
    "addressSearchQuery": "Springfield",
    "partnerCode": "alice112ith"
  },
  "steps": [
    {
      "id": "step_alicesmith_login",
      "name": "Login AliceSmith",
      "type": "request",
      "method": "POST",
      "url": "{{baseUrl}}/api/auth/login?username={{userUsername}}&password={{userPassword}}",
      "extract": {
        "token": "body.access_token"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_alicesmith_legacy_address_search",
      "name": "AliceSmith: Legacy Address Search",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/addresses/search-legacy?q={{addressSearchQuery}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_alicesmith_legacy_order_status",
      "name": "AliceSmith: Legacy Order Status",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/orders/{{legacyOrderId}}/status-legacy?legacy_token={{legacyToken}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_alicesmith_b2b_partner_lookup",
      "name": "AliceSmith: B2B Partner Lookup",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/b2b/partner-lookup?q={{partnerCode}}",
      "onFailure": "continue"
    }
  ],
  "visualLayout": {
    "step_alicesmith_login": {
      "x": 50,
      "y": 50
    },
    "step_alicesmith_legacy_address_search": {
      "x": 250,
      "y": 50
    },
    "step_alicesmith_legacy_order_status": {
      "x": 450,
      "y": 50
    },
    "step_alicesmith_b2b_partner_lookup": {
      "x": 650,
      "y": 50
    }
  }
}
