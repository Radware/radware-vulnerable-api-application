{
  "name": "BobJohnson - Legacy + B2B Discovery",
  "description": "Protected user BobJohnson logs in, uses legacy address search and legacy order status, then performs a B2B partner lookup.",
  "headers": {
    "Accept": "application/json"
  },
  "staticVars": {
    "baseUrl": "https://bla-bypass.ase-team.com",
    "userUsername": "BobJohnson",
    "userPassword": "BobPass2@",
    "userId": "00000003-0000-0000-0000-000000000003",
    "legacyOrderId": "aa6e4588-106a-5db4-aa38-d8c4cc717bfc",
    "legacyToken": "legacy-demo",
    "addressSearchQuery": "Capital%20City",
    "partnerCode": "bobjo113son"
  },
  "steps": [
    {
      "id": "step_bobjohnson_login",
      "name": "Login BobJohnson",
      "type": "request",
      "method": "POST",
      "url": "{{baseUrl}}/api/auth/login?username={{userUsername}}&password={{userPassword}}",
      "extract": {
        "token": "body.access_token"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_bobjohnson_legacy_address_search",
      "name": "BobJohnson: Legacy Address Search",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/addresses/search-legacy?q={{addressSearchQuery}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_bobjohnson_legacy_order_status",
      "name": "BobJohnson: Legacy Order Status",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/orders/{{legacyOrderId}}/status-legacy?legacy_token={{legacyToken}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_bobjohnson_b2b_partner_lookup",
      "name": "BobJohnson: B2B Partner Lookup",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/b2b/partner-lookup?q={{partnerCode}}",
      "onFailure": "continue"
    }
  ],
  "visualLayout": {
    "step_bobjohnson_login": {
      "x": 50,
      "y": 50
    },
    "step_bobjohnson_legacy_address_search": {
      "x": 250,
      "y": 50
    },
    "step_bobjohnson_legacy_order_status": {
      "x": 450,
      "y": 50
    },
    "step_bobjohnson_b2b_partner_lookup": {
      "x": 650,
      "y": 50
    }
  }
}
