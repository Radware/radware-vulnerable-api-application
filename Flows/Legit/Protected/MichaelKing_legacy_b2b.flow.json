{
  "name": "MichaelKing - Legacy + B2B Discovery",
  "description": "Protected user MichaelKing logs in, uses legacy address search and legacy order status, then performs a B2B partner lookup.",
  "headers": {
    "Accept": "application/json"
  },
  "staticVars": {
    "baseUrl": "http://localhost:8060",
    "userUsername": "MichaelKing",
    "userPassword": "MichaelPass12!",
    "userId": "00000013-0000-0000-0000-000000000013",
    "legacyOrderId": "8029c4a3-6581-5c6e-8009-79bc2d676611",
    "legacyToken": "legacy-demo",
    "addressSearchQuery": "Gateway",
    "partnerCode": "micha122ing"
  },
  "steps": [
    {
      "id": "step_michaelking_login",
      "name": "Login MichaelKing",
      "type": "request",
      "method": "POST",
      "url": "{{baseUrl}}/api/auth/login?username={{userUsername}}&password={{userPassword}}",
      "extract": {
        "token": "body.access_token"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_michaelking_legacy_address_search",
      "name": "MichaelKing: Legacy Address Search",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/addresses/search-legacy?q={{addressSearchQuery}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_michaelking_legacy_order_status",
      "name": "MichaelKing: Legacy Order Status",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/users/{{userId}}/orders/{{legacyOrderId}}/status-legacy?legacy_token={{legacyToken}}",
      "headers": {
        "Authorization": "Bearer {{token}}"
      },
      "onFailure": "stop"
    },
    {
      "id": "step_michaelking_b2b_partner_lookup",
      "name": "MichaelKing: B2B Partner Lookup",
      "type": "request",
      "method": "GET",
      "url": "{{baseUrl}}/api/b2b/partner-lookup?q={{partnerCode}}",
      "onFailure": "continue"
    }
  ],
  "visualLayout": {
    "step_michaelking_login": {
      "x": 50,
      "y": 50
    },
    "step_michaelking_legacy_address_search": {
      "x": 250,
      "y": 50
    },
    "step_michaelking_legacy_order_status": {
      "x": 450,
      "y": 50
    },
    "step_michaelking_b2b_partner_lookup": {
      "x": 650,
      "y": 50
    }
  }
}
